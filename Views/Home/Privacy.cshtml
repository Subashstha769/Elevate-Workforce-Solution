@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

@* CSS Styling for Privacy Policy *@

<style>
        @* body {
            margin: 0;
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background: #f9f9f9;
            color: #333;
